    "mongoose": "5.3.2",
    "morgan": "1.9.1",
    "socket.io": "2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "cross-env": "5.2.0",
    "eslint": "5.6.1",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.1.1",
